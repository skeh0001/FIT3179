{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "data/sport_medalsN.csv"},
    "params": [
        {
            "name": "sport_select",
            "value": "Athletics",
            "bind": {
                "input": "select",
                "options": [
                    "Aeronautics",
                    "Alpine Skiing",
                    "Alpinism",
                    "Archery",
                    "Art Competitions",
                    "Athletics",
                    "Badminton",
                    "Baseball",
                    "Basketball",
                    "Basque Pelota",
                    "Beach Volleyball",
                    "Biathlon",
                    "Bobsleigh",
                    "Boxing",
                    "Canoeing",
                    "Cricket",
                    "Croquet",
                    "Cross Country Skiing",
                    "Curling",
                    "Cycling",
                    "Diving",
                    "Equestrianism",
                    "Fencing",
                    "Figure Skating",
                    "Football",
                    "Freestyle Skiing",
                    "Golf",
                    "Gymnastics",
                    "Handball",
                    "Hockey",
                    "Ice Hockey",
                    "Jeu De Paume",
                    "Judo",
                    "Lacrosse",
                    "Luge",
                    "Military Ski Patrol",
                    "Modern Pentathlon",
                    "Motorboating",
                    "Nordic Combined",
                    "Polo",
                    "Racquets",
                    "Rhythmic Gymnastics",
                    "Roque",
                    "Rowing",
                    "Rugby",
                    "Rugby Sevens",
                    "Sailing",
                    "Shooting",
                    "Short Track Speed Skating",
                    "Skeleton",
                    "Ski Jumping",
                    "Snowboarding",
                    "Softball",
                    "Speed Skating",
                    "Swimming",
                    "Synchronized Swimming",
                    "Table Tennis",
                    "Taekwondo",
                    "Tennis",
                    "Trampolining",
                    "Triathlon",
                    "Tug-Of-War",
                    "Volleyball",
                    "Water Polo",
                    "Weightlifting",
                    "Wrestling"
                ],
                "name": "Sport Selection: "
            }
        },
        {
            "name": "NoneToggle",
            "value": 1,
            "bind": {
                "input": "select",
                "options": [1, 0],
                "labels": ["No", "Yes"],
                "name": "Include no medals: "
            }
        }
    ],
    "vconcat": [
        {
            "title": "Medals won per sport by age",
            "width": "container",
            "height": 200,
            "params": [
                {
                    "name": "medal_highlight",
                    "select": {"type": "point", "on": "mouseover", "fields": ["Medal"]},
                    "bind": "legend"
                }
            ],
            "transform": [
                {"filter": "datum.Sport == sport_select"},
                {"filter": "datum.MedalN > NoneToggle"},
                {"bin": {"maxbins": 30}, "field": "Age", "as": "binned Age"}
            ],
            "mark": {"type": "line", "point": true},
            "encoding": {
                "x": {"bin": {"maxbins": 30}, "field": "binned Age", "title": "Age"},
                "y": {"aggregate": "count", "title": "Amount"},
                "color": {
                    "field": "Medal",
                    "type": "ordinal",
                    "scale": {
                        "domain": ["None", "Bronze", "Silver", "Gold"],
                        "range": ["#000000", "#CD7F32", "#C0C0C0", "#FFD700"]
                    }
                },
                "opacity": {
                    "condition": {"param": "medal_highlight", "value": 0.8},
                    "value": 0.2
                },
                "tooltip": [
                    {"bin": {"maxbins": 30}, "field": "binned Age", "title": "Age"},
                    {"field": "Medal"},
                    {"aggregate": "count", "title": "Amount"}
                ]
            }
        },
        {
            "title": "Medals won per sport by weight",
            "width": "container",
            "height": 200,
            "params": [
                {
                    "name": "medal_highlight",
                    "select": {"type": "point", "on": "mouseover", "fields": ["Medal"]},
                    "bind": "legend"
                }
            ],
            "transform": [
                {"filter": "datum.Sport == sport_select"},
                {"filter": "datum.MedalN > NoneToggle"},
                {"bin": {"maxbins": 30}, "field": "Weight", "as": "binned Weight"}
            ],
            "mark": {"type": "line", "point": true},
            "encoding": {
                "x": {"bin": {"maxbins": 30}, "field": "binned Weight", "title": "Weight"},
                "y": {"aggregate": "count", "title": "Amount"},
                "color": {
                    "field": "Medal",
                    "type": "ordinal",
                    "scale": {
                        "domain": ["None", "Bronze", "Silver", "Gold"],
                        "range": ["#000000", "#CD7F32", "#C0C0C0", "#FFD700"]
                    }
                },
                "opacity": {
                    "condition": {"param": "medal_highlight", "value": 0.8},
                    "value": 0.2
                },
                "tooltip": [
                    {"bin": {"maxbins": 30}, "field": "binned Weight", "title": "Weight"},
                    {"field": "Medal"},
                    {"aggregate": "count", "title": "Amount"}
                ]
            }
        },
        {
            "title": "Medals won per sport by height",
            "width": "container",
            "height": 200,
            "params": [
                {
                    "name": "medal_highlight",
                    "select": {"type": "point", "on": "mouseover", "fields": ["Medal"]},
                    "bind": "legend"
                }
            ],
            "transform": [
                {"filter": "datum.Sport == sport_select"},
                {"filter": "datum.MedalN > NoneToggle"},
                {"bin": {"maxbins": 30}, "field": "Height", "as": "binned Height"}
            ],
            "mark": {"type": "line", "point": true},
            "encoding": {
                "x": {"bin": {"maxbins": 30}, "field": "binned Height", "title": "Height"},
                "y": {"aggregate": "count", "title": "Amount"},
                "color": {
                    "field": "Medal",
                    "type": "ordinal",
                    "scale": {
                        "domain": ["None", "Bronze", "Silver", "Gold"],
                        "range": ["#000000", "#CD7F32", "#C0C0C0", "#FFD700"]
                    }
                },
                "opacity": {
                    "condition": {"param": "medal_highlight", "value": 0.8},
                    "value": 0.2
                },
                "tooltip": [
                    {"bin": {"maxbins": 30}, "field": "binned Height", "title": "Height"},
                    {"field": "Medal"},
                    {"aggregate": "count", "title": "Amount"}
                ]
            }
        }
    ]
    
  }
  