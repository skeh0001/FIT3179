{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 600,
  "title": "Average Weight, Height, and Age of atheletes in Olympic events from 1896 to 2016",
  "data": {
    "url": "data/ave_sports.csv"
  },
  "params": [
    {
      "name": "ol_year",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 1896,
        "max": 2016,
        "step": 2,
        "name": "Olympic Year: "
      }
    },
    {
        "name": "sport_select",
        "bind": {
            "input": "select",
            "options": [
                null,
                "Aeronautics",
                "Alpine Skiing",
                "Alpinism",
                "Archery",
                "Art Competitions",
                "Athletics",
                "Badminton",
                "Baseball",
                "Basketball",
                "Basque Pelota",
                "Beach Volleyball",
                "Biathlon",
                "Bobsleigh",
                "Boxing",
                "Canoeing",
                "Cricket",
                "Croquet",
                "Cross Country Skiing",
                "Curling",
                "Cycling",
                "Diving",
                "Equestrianism",
                "Fencing",
                "Figure Skating",
                "Football",
                "Freestyle Skiing",
                "Golf",
                "Gymnastics",
                "Handball",
                "Hockey",
                "Ice Hockey",
                "Jeu De Paume",
                "Judo",
                "Lacrosse",
                "Luge",
                "Military Ski Patrol",
                "Modern Pentathlon",
                "Motorboating",
                "Nordic Combined",
                "Polo",
                "Racquets",
                "Rhythmic Gymnastics",
                "Roque",
                "Rowing",
                "Rugby",
                "Rugby Sevens",
                "Sailing",
                "Shooting",
                "Short Track Speed Skating",
                "Skeleton",
                "Ski Jumping",
                "Snowboarding",
                "Softball",
                "Speed Skating",
                "Swimming",
                "Synchronized Swimming",
                "Table Tennis",
                "Taekwondo",
                "Tennis",
                "Trampolining",
                "Triathlon",
                "Tug-Of-War",
                "Volleyball",
                "Water Polo",
                "Weightlifting",
                "Wrestling"
            ],
            "labels": [
              "Show All",
              "Aeronautics",
              "Alpine Skiing",
              "Alpinism",
              "Archery",
              "Art Competitions",
              "Athletics",
              "Badminton",
              "Baseball",
              "Basketball",
              "Basque Pelota",
              "Beach Volleyball",
              "Biathlon",
              "Bobsleigh",
              "Boxing",
              "Canoeing",
              "Cricket",
              "Croquet",
              "Cross Country Skiing",
              "Curling",
              "Cycling",
              "Diving",
              "Equestrianism",
              "Fencing",
              "Figure Skating",
              "Football",
              "Freestyle Skiing",
              "Golf",
              "Gymnastics",
              "Handball",
              "Hockey",
              "Ice Hockey",
              "Jeu De Paume",
              "Judo",
              "Lacrosse",
              "Luge",
              "Military Ski Patrol",
              "Modern Pentathlon",
              "Motorboating",
              "Nordic Combined",
              "Polo",
              "Racquets",
              "Rhythmic Gymnastics",
              "Roque",
              "Rowing",
              "Rugby",
              "Rugby Sevens",
              "Sailing",
              "Shooting",
              "Short Track Speed Skating",
              "Skeleton",
              "Ski Jumping",
              "Snowboarding",
              "Softball",
              "Speed Skating",
              "Swimming",
              "Synchronized Swimming",
              "Table Tennis",
              "Taekwondo",
              "Tennis",
              "Trampolining",
              "Triathlon",
              "Tug-Of-War",
              "Volleyball",
              "Water Polo",
              "Weightlifting",
              "Wrestling"
            ],
            "name": "Sport Selection: "
        }
    }
  ],
  "transform": [
    {"filter": "datum.Year == ol_year"},
    {"filter": "sport_select == null || datum.Sport == sport_select"},
    {"calculate": "parseInt(datum.Weight)", "as": "Weight"}
  ],
  "encoding": {
    "x": {
      "field": "Height",
      "type": "quantitative",
      "scale": {"zero": false},
      "title": "Average Height (cm)"
    },
    "y": {
      "field": "Weight",
      "type": "quantitative",
      "scale": {"zero": false},
      "title": "Average Weight (kg)"
    }
  },
  "layer": [
    {
      "params": [
          {
              "name": "sport_highlight",
              "select": {"type": "point", "fields": ["Sport"]},
              "bind": "legend"
          },
          {
              "name": "grid",
              "select": "interval",
              "bind": "scales"
          }
      ],
      "mark": {"type": "circle", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "size": {
          "field": "Age",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [15, 20, 25, 30, 35],
            "range": [25, 50, 150, 300, 450, 600]
          },
          "legend": {"format": ".2s"},
          "title": "Average Age"
        },
        "color": {
          "field": "Sport",
          "type": "nominal"
        },
        "opacity": {
            "condition": {"param": "sport_highlight", "value": 0.8},
            "value": 0.2
        },
        "tooltip": [
          {"field": "Event", "type": "nominal"},
          {"field": "Sport", "type": "nominal"},
          {"field": "Height", "type": "quantitative", "format": ".3s"},
          {"field": "Weight", "type": "quantitative", "format": ".3s"},
          {"field": "Age", "type": "quantitative", "format": ".3s"},
          {"field": "City", "type": "nominal"}
        ]
      }
    },
    {
      "transform": [
        {
          "window": [{"op": "rank", "as": "ranking"}],
          "sort": [{"field": "Height", "order": "descending"}]
        },
      {"filter": "datum.ranking == 1"},
      {"calculate": "'Event with Average Tallest Athletes in ' + datum['Year'] + ': ' + round(datum['Height']) + ' cm'",
        "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text", 
        "align": "center", 
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {"text": {"field": "text_annotation"}}
    },
    {
      "transform": [
        {
          "window": [{"op": "rank", "as": "ranking"}],
          "sort": [{"field": "Weight", "order": "descending"}]
        },
      {"filter": "datum.ranking == 1"},
      {"calculate": "'Event with Average Heaviest Athletes in ' + datum['Year'] + ': ' + round(datum['Weight']) + ' kg'",
        "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text", 
        "align": "center", 
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {"text": {"field": "text_annotation"}}
    },
    {
      "transform": [
        {
          "window": [{"op": "rank", "as": "ranking"}],
          "sort": [{"field": "Age", "order": "descending"}]
        },
      {"filter": "datum.ranking == 1"},
      {"calculate": "'Event with Average Oldest Athletes in ' + datum['Year'] + ': ' + round(datum['Age']) + ' years old'",
        "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text", 
        "align": "center", 
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {"text": {"field": "text_annotation"}}
    }
  ]
}